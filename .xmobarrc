Config { position = Top
       , lowerOnStart = True
       , hideOnStart = False
       , persistent = True
       , allDesktops = True
       , commands = [
                      -- network activity monitor (dynamic interface resolution)
                      Run DynNetwork [ "--template" , "<dev>: <tx>kB/s|<rx>kB/s"
                                     , "--Low"      , "1000"       -- units: B/s
                                     , "--High"     , "5000"       -- units: B/s
                                     , "--low"      , "darkgreen"
                                     , "--normal"   , "darkorange"
                                     , "--high"     , "darkred"
                                     ] 10

                      -- cpu activity monitor
                      , Run MultiCpu [ "--template" , "Cpu: <total0>%|<total1>%"
                                     , "--Low"      , "50"         -- units: %
                                     , "--High"     , "85"         -- units: %
                                     , "--low"      , "darkgreen"
                                     , "--normal"   , "darkorange"
                                     , "--high"     , "darkred"
                                     ] 10

                      -- memory usage monitor
                      , Run Memory [ "--template" ,"Mem: <usedratio>%"
                                   , "--Low"      , "35"        -- units: %
                                   , "--High"     , "90"        -- units: %
                                   , "--low"      , "darkgreen"
                                   , "--normal"   , "#bbbb00"
                                   , "--high"     , "darkred"
                                   ] 10

                    , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
                    
                     -- cpu core temperature monitor
                    , Run CoreTemp [ "--template" , "Temp: <core0>째C|<core1>째C"
                                   , "--Low"      , "60"        -- units: 째C
                                   , "--High"     , "80"        -- units: 째C
                                   , "--low"      , "darkgreen"
                                   , "--normal"   , "#bbbb00"
                                   , "--high"     , "darkred"
                                   ] 50

                    -- battery monitor
                    , Run Battery [ "--template" , "Batt: <acstatus>"
                                  , "--Low"      , "10"        -- units: %
                                  , "--High"     , "80"        -- units: %
                                  , "--low"      , "darkred"
                                  , "--normal"   , "#bbbb00"
                                  , "--high"     , "darkgreen"

                                  , "--" -- battery specific options
                                       -- discharging status
                                       , "-o"   , "<left>% (<timeleft>)"
                                       -- AC "on" status
                                       , "-O"   , "<fc=#dAA520>Charging</fc>"
                                       -- charged status
                                       , "-i"   , "<fc=#006000>Charged</fc>"
                                  ] 50
                    , Run StdinReader
                    ]

       , sepChar = "%"
       , alignSep = "}{"
       , template = " %StdinReader% }{ %coretemp% | %multicpu% | %memory% | %dynnetwork% | %battery% | %date%"
